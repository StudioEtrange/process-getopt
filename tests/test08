test_body() {
    source ../process-getopt
    ASDA_func() { [ "${1:-""}" ] && ASDA="yes"; }
    add_opt "ASDA" "asda description" a arg asda argl
    return $?
}

test_setup() {
    TEST_TITLE="simple add_opt with arguments"
    TEST_ARGS="-h"
    TEST_IGNORE_STDOUT=
    TEST_IGNORE_STDERR=
    TEST_IGNORE_VALUE=
    TEST_EXP_VAL=0
    cat > $TEST_EXP_STDOUT <<"EOF"
EOF
    cat > $TEST_EXP_STDERR <<"EOF"
EOF
}
