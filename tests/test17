test_body() {
    STOP_ON_FIRST_NON_OPT="yes"

    source ../src/process-getopt
    BOOL=""
    BOOL_func() { [ "${1:-""}" ] && BOOL="yes"; }
    add_opt "BOOL" "bool description" b "" bool

    ASDA=""
    ASDA_func() { [ "${1:-""}" ] && ASDA="$2"; }
    add_opt "ASDA" "asda description" a arg asda argl

    SILENT=""
    SILENT_func() { [ "${1:-""}" ] && SILENT="$2"; }
    add_opt "SILENT" "silent description" s arg silent argl

    add_std_opts     # define the standard options --help etc:
    del_opt QUIET END_OPTIONS
    TEMP=$(call_getopt "$@") || exit 1
    eval set -- "$TEMP"
    process_opts "$@" || shift $?

    echo "BOOL=$BOOL"
    echo "VERBOSE=$VERBOSE"
    echo "ASDA=$ASDA"
    echo "SILENT=$SILENT"

    for i in $@; do echo -n "\"$i\" "; done
    echo

    return 0
}

test_setup() {
    TEST_TITLE="STOP_ON_FIRST_NON_OPT"
    TEST_ARGS="-vb --silent=Silent-value --asda Asda-value add -h"
    TEST_IGNORE_STDOUT=
    TEST_IGNORE_STDERR=
    TEST_IGNORE_VALUE=
    TEST_EXP_VAL=0
    cat > $TEST_EXP_STDOUT <<"EOF"
BOOL=yes
VERBOSE=VERBOSE_yes
ASDA=Asda-value
SILENT=Silent-value
"add" "-h" 
EOF
    cat > $TEST_EXP_STDERR <<"EOF"
EOF
}
